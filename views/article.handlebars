
{{!-- this HTML displays articles if article is there --}}

<head>
    <meta charset="UTF-8">
    <title>{{pageTitle}}</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<header>
    <h1>Travel Blog</h1>
    <nav id="nav-bar">
        <a href="./logout">Logout</a>
        <a href="./my-profile">View Your Profile - to be added</a>
        <a class="active" href="/">Home</a>
        <a href="./entry">Articles - to be added</a>
        <a href="./Authors">Authors - to be added</a>
        <a href="./location">Locations</a>
    </nav>
</header>

{{#if articleEntry}}
<script src="/imageInArticle.js"></script>
<h1 id="title">
    {{article.Title}}
</h1>
<h3> By {{article.UserID}}</h3>
<h3>{{article.PublishDate}}</h3>



<div id="content">
    {{{article.Content}}}
</div>
<div data-author={{author.UserID}} id="images">

    {{#each images}}
    <img class="images" data-imageURL={{this.ImageURL}}>
    {{/each }}
    <a href="" id="author_info" data-author={{article.UserID}}>
        author's page
    </a>

    {{!-- edited the article --}}
    <form id= "theEditForm" action="/editArticle">
        <div id="form-edit-form">
            <input type="hidden" id="postId" name="postID" value = {{articleId}}>
            <button type="submit">Edit the article!</button>
        </div>
    </form>

    {{!-- Delete the article --}}

    <form id= "theDeleteForm" action="/deleteArticle">
        <div id="form-edit-form">
            <input type="hidden" id="postId" name="postID" value = {{articleId}}>
            <button type="submit">Delete the article!</button>
        </div>
    </form>
    <a href="/gallery">Back to Gallery</a>

    {{else}}
    <p>No article available.</p>
    {{/if}}