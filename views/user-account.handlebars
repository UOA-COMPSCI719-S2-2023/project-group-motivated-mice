<body id="container">
    <div id="grid-container">
        <div class="user-details">
            <div id="user-info">
                <img id="user-avatar" src="{{avatar.ImageFilePath}}" alt="User Avatar" class="avatar">
                <p>User Name:{{user.UserName}}</p>
                <p>About:{{user.About}}</p>
            </div>

            <div class="user-articles">
                <h3>Articles written by {{user.UserName}}:</h3>
                <ul>
                    {{#each articles}}
                    <li><a href="/articles/{{this.ArticleID}}">{{this.Title}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div id="top-articles-user">
            <h3>Top Articles</h3>
            <ul>
                {{#each topArticles}}
                <li><a href="/articles/{{this.ArticleID}}">{{this.Title}}</a></li>
                {{/each}}
            </ul>
        </div>
    </div>
</body>