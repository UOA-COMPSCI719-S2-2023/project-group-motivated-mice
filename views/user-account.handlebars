<div>
    <img src="{{avatar.ImageFilePath}}" alt="User Avatar" class="avatar">
    <p>User Name:{{user.UserName}}</p>
    <p>About:{{user.About}}</p>
</div>

<section>
    <h3>Articles written by {{user.UserName}}:</h3>
    <ul>
        {{#each articles}}
        <li><a href="/articles/{{this.ArticleID}}">{{this.Title}}</a></li>
        {{/each}}
    </ul>
</section>

<section>
    <h3>Top Articles</h3>
    <ul>
        {{#each topArticles}}
        <li><a href="/articles/{{this.ArticleID}}">{{this.Title}}</a></li>
        {{/each}}
    </ul>
</section>