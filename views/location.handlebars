{{!-- displays locations and the weather and associaed articles --}}
<script src="./location.js"></script>

<head>
    <meta charset="UTF-8">
    <title>{{pageTitle}}</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<header>
    <h1>Travel Blog</h1>
    <nav id="nav-bar">
        <a href="./logout">Logout</a>
        <a href="./my-profile">View Your Profile - to be added</a>
        <a class="active" href="/">Home</a>
        <a href="./entry">Articles - to be added</a>
        <a href="./Authors">Authors - to be added</a>
        <a href="./location">Locations</a>
    </nav>
</header>

<body id="location-page">
    <div id="top-location">
        <h3>Top Locations</h3>
        <ul id="toplocationlist">
            {{#each topLocations}}
            <li id="{{this.LocationID}}" class="locationlistitems">{{this.Name}}</li>
            {{/each}}
        </ul>
    </div>
    <div id="all-locations">
        <h3>All Locations</h3>
        <ul id="alllocationlist">
            {{#each allLocations}}
            <li id="{{this.LocationID}}" class="locationlistitems">{{this.Name}}</li>
            {{/each}}
        </ul>

    </div>
    <div id=" selected-location">
        <h3 id="selectedName">About New Zealand</h3>
        <p id="selectedDescription">New Zealand is a welcoming, diverse country with a history of MƒÅori, European,
            Pacific
            Island, and Asian immigration.
            This rich blend of cultures, combined with geologically fascinating landscapes and unique flora and fauna,
            make
            New Zealand an exciting country to explore.
            Click on one of the locations listed to explore information and articles about the area</p>
        <p id="likes"></p>
        <div id="weather">
            <h3 id="weathername"></h3>
            <p id="temperature"></p>
            <p id="humidity"></p>
            <p id="uvindex"></p>
            <p id="windspeed"></p>
            <p id="cloudcover"></p>
        </div>

        <div id="Articles">
            <h3 id="articlesforlocationtitle"></h3>
            <ul id="articlesbylocationlist">
            </ul>
        </div>
    </div>
</body>