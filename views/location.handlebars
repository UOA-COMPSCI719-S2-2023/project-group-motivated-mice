<script src="./location.js"></script>

<body id="container">
    <div id="location-grid">
        <div id="locations">
            <h3>Top Locations</h3>
            <ul id="toplocationlist">
                {{#each topLocations}}
                <li id="{{this.LocationID}}" class="locationlistitems">{{this.Name}}</li>
                {{/each}}
            </ul>

            <h3>All Locations</h3>
            <ul id="alllocationlist">
                {{#each allLocations}}
                <li id="{{this.LocationID}}" class="locationlistitems">{{this.Name}}</li>
                {{/each}}
            </ul>

        </div>
        <div id=" selected-location">
            <div id="selected-info">
                <h3 id="selectedName">About New Zealand</h3>
                <p id="selectedDescription">New Zealand is a welcoming, diverse country with a history of MƒÅori,
                    European,
                    Pacific Island, and Asian immigration.
                    This rich blend of cultures, combined with geologically fascinating landscapes and unique flora and
                    fauna,
                    make New Zealand an exciting country to explore.
                    Click on one of the locations listed to explore information and articles about the area</p>
                <p id="likes"></p>
            </div>
            <div id="weather">
                <h3 id="weathername"></h3>
                <p id="temperature"></p>
                <p id="humidity"></p>
                <p id="uvindex"></p>
                <p id="windspeed"></p>
                <p id="cloudcover"></p>
            </div>


            <div id="Articles-location">
                <h3 id="articlesforlocationtitle"></h3>
                <ul id="articlesbylocationlist">
                </ul>
            </div>
        </div>
    </div>
</body>