<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<script src="./custom-quill.js"></script>
<script src="./preview.js"></script>

<form id="form" action="./sendEdit" enctype="multipart/form-data" multiple='multiple' method="POST">
    <div class="form-group">

        
        <label for="title">Title of the article</label>
        
        <input type="text" id="title" name="title" required maxlength="255" value= {{article.Title}}>
       
        <br><br>
        <div id="toolbar">
        </div>
        <input type="hidden" id="article" name="article" >
        <div id="editor">
            {{{article.Content}}}
        </div>
        <br /><br />
        <input type="hidden" id="articleIDNumber" name="articleNumber" value = {{articleID}}>
        <div>
            <label for="uploadImage">Upload an image here!</label>
            <input class="uploadImage" id="uploadImage1" type="file" name="imageFile" accept=".png,.jpg,.jpeg,.bmp">
        </div>
        <div>
            <label for="uploadImage">Upload an image here!</label>
            <input class="uploadImage" id="uploadImage2" type="file" name="imageFile" accept=".png,.jpg,.jpeg,.bmp">
        </div>
        <div>
            <label for="uploadImage">Upload an image here!</label>
            <input class="uploadImage" id="uploadImage3" type="file" name="imageFile" accept=".png,.jpg,.jpeg,.bmp">
        </div>
        <div>
            <label for="uploadImage">Upload an image here!</label>
            <input class="uploadImage" id="uploadImage4" type="file" name="imageFile" accept=".png,.jpg,.jpeg,.bmp">

        </div>

        <div id="preview">

        </div>
        <button id="submit-button" type="submit">Submit form</button>
    </div>
</form>